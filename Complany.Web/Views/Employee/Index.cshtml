@if(Model.Count() > 0)
{

    <table class="table table-striped table-hover">
    <thead>

    <tr>

            <th>@Html.DisplayNameFor(D => D.Name)</th>
            <th>@Html.DisplayNameFor(D => D.Age)</th>
            <th>@Html.DisplayNameFor(D => D.Address)</th>
            <th>@Html.DisplayNameFor(D => D.Email)</th>
            <th>@Html.DisplayNameFor(D => D.PhoneNumber)</th>
            <th>@Html.DisplayNameFor(D => D.HiringDate)</th>
            <th> @Html.DisplayName For(D => D.Salary)</th>
            <th>Details</th>
            <th>Update</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var Employee in Model)
            {
                <tr>
                    <td>@Employee.Name</td>
                    <td>
                        <img src="~/File/Images/@Employee.ImgUrl" height="40" width="40" />
                    </td>
                    <td>@Employee.Age</td>
                    <td>@Employee.Address</td>
                    <td>@Employee.HiringDate</td>
                    <td>@Employee.Salary</td>
                    <td>@Employee.PhoneNumber</td>
                    <td>@Employee.Image</td>

                    <partial name="ActionButtons" model="@Employee.DepartmentId.ToString()" />
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="mt-5 alert alert-warning">
        <h3>There is No Employee</h3>
    </div>
}
